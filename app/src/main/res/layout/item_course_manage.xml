<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="16dp"
    app:cardBackgroundColor="#BEF294"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="68dp"
            android:layout_height="78dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/ivThumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/mailbox" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_bold"
                android:text="Course Title"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:lineSpacingMultiplier="1.15"
                android:maxLines="2"
                android:ellipsize="end"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/tvMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/manrope_medium"
                android:text="Meta Information"
                android:textColor="#2E5A0F"
                android:textSize="13sp"
                android:alpha="0.85"
                android:letterSpacing="0.005"
                android:lineSpacingMultiplier="1.1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/swPublish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="Published"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:drawablePadding="8dp"
                    android:letterSpacing="0.02"
                    app:thumbTint="#FFFFFF"
                    app:trackTint="#4CAF50"
                    app:trackTintMode="src_in" />
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnThumb"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="Thumbnail"
                    android:textColor="#2E5A0F"
                    android:textSize="11sp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="10dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    app:strokeColor="#2E5A0F"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    app:rippleColor="#1A2E5A0F" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="Edit"
                    android:textColor="#2E5A0F"
                    android:textSize="11sp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="10dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    app:strokeColor="#2E5A0F"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    app:rippleColor="#1A2E5A0F" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpen"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="Open"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    app:backgroundTint="#2E5A0F"
                    app:cornerRadius="8dp"
                    app:rippleColor="#33FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
