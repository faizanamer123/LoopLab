<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_primary">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Admin Dashboard"
            app:titleTextColor="@color/primary_foreground"
            app:background="@android:color/transparent" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Welcome Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/primary_glow"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@drawable/bg_gradient_accent">

                    <TextView
                        android:id="@+id/tvWelcomeMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back, Admin!"
                        android:textColor="@color/primary_foreground"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Manage and oversee the LoopLab platform"
                        android:textColor="@color/primary_foreground"
                        android:textSize="16sp"
                        android:alpha="0.9" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Platform Statistics -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Platform Statistics"
                android:textColor="@color/primary_foreground"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Total Users Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTotalUsers"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/card"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:rippleColor="@color/ripple_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/bg_modern_card">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_profile"
                            android:tint="@color/looplab_blue"
                            android:background="@drawable/bg_progress_overlay"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/tvTotalUsers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0"
                            android:textColor="@color/looplab_blue"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Users"
                            android:textColor="@color/primary_foreground"
                            android:textSize="14sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Total Courses Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTotalCourses"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/card"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:rippleColor="@color/ripple_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/bg_modern_card">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_courses"
                            android:tint="@color/success"
                            android:background="@drawable/bg_progress_overlay"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/tvTotalCourses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0"
                            android:textColor="@color/success"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Courses"
                            android:textColor="@color/primary_foreground"
                            android:textSize="14sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Total Events Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTotalEvents"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/card"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:rippleColor="@color/ripple_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/bg_modern_card">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_events"
                            android:tint="@color/warning"
                            android:background="@drawable/bg_progress_overlay"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/tvTotalEvents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0"
                            android:textColor="@color/warning"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Events"
                            android:textColor="@color/primary_foreground"
                            android:textSize="14sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Active Sessions Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardActiveSessions"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/card"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:rippleColor="@color/ripple_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/bg_modern_card">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_video"
                            android:tint="@color/info"
                            android:background="@drawable/bg_progress_overlay"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/tvActiveSessions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0"
                            android:textColor="@color/info"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Live Sessions"
                            android:textColor="@color/primary_foreground"
                            android:textSize="14sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Admin Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Actions"
                android:textColor="@color/primary_foreground"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnManageUsers"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Manage Users"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_profile"
                        android:drawablePadding="8dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/looplab_blue"
                        app:iconTint="@color/primary_foreground"
                        app:rippleColor="@color/ripple_light" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnManageCourses"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Manage Courses"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_courses"
                        android:drawablePadding="8dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/success"
                        app:iconTint="@color/primary_foreground"
                        app:rippleColor="@color/ripple_light" />

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnManageEvents"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Manage Events"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_events"
                        android:drawablePadding="8dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/warning"
                        app:iconTint="@color/primary_foreground"
                        app:rippleColor="@color/ripple_light" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnManageAnnouncements"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Announcements"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_notification"
                        android:drawablePadding="8dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/info"
                        app:iconTint="@color/primary_foreground"
                        app:rippleColor="@color/ripple_light" />

                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewAnalytics"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Analytics"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_analytics"
                        android:drawablePadding="8dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/looplab_blue"
                        app:iconTint="@color/primary_foreground"
                        app:rippleColor="@color/ripple_light" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnManageFeedback"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Feedback"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_chat"
                        android:drawablePadding="8dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/success"
                        app:iconTint="@color/primary_foreground"
                        app:rippleColor="@color/ripple_light" />

                </LinearLayout>

                <!-- Row 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLiveSessions"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Live Sessions"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_video"
                        android:drawablePadding="8dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/warning"
                        app:iconTint="@color/primary_foreground"
                        app:rippleColor="@color/ripple_light" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAIChatbot"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="AI Chatbot"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_ai"
                        android:drawablePadding="8dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/info"
                        app:iconTint="@color/primary_foreground"
                        app:rippleColor="@color/ripple_light" />

                </LinearLayout>

            </LinearLayout>

            <!-- Recent Activity Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Activity"
                android:textColor="@color/primary_foreground"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvRecentActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No recent activity"
                        android:textColor="@color/muted_foreground"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:drawableStart="@drawable/ic_time"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/muted_foreground" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


