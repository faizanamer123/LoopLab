<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <!-- User Message -->
    <LinearLayout
        android:id="@+id/userMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:maxWidth="280dp">

            <TextView
                android:id="@+id/tvUserMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User message here"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_gradient_accent"
                android:padding="16dp"
                android:maxLines="10"
                android:lineSpacingExtra="2dp"
                android:gravity="start"
                android:layout_gravity="end"
                android:minWidth="80dp"/>

            <TextView
                android:id="@+id/tvUserTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:34 PM"
                android:textColor="@color/muted_foreground"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp"
                android:layout_gravity="end"
                android:alpha="0.7"/>

        </LinearLayout>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/bg_gradient_primary"
            android:padding="6dp"
            android:contentDescription="User"
            app:tint="@color/white"
            android:layout_marginStart="12dp"/>

    </LinearLayout>

    <!-- AI Message -->
    <LinearLayout
        android:id="@+id/aiMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:visibility="gone">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_ai"
            android:background="@drawable/bg_gradient_accent"
            android:padding="6dp"
            android:contentDescription="AI Assistant"
            app:tint="@color/white"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:maxWidth="280dp">

            <TextView
                android:id="@+id/tvAIMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI response here"
                android:textColor="@color/foreground"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:background="@drawable/bg_modern_card"
                android:padding="16dp"
                android:maxLines="20"
                android:lineSpacingExtra="2dp"
                android:gravity="start"
                android:layout_gravity="start"
                android:minWidth="80dp"/>

            <TextView
                android:id="@+id/tvAITime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:34 PM"
                android:textColor="@color/muted_foreground"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp"
                android:layout_gravity="start"
                android:alpha="0.7"/>

        </LinearLayout>

    </LinearLayout>

    <!-- System Message (for errors, info) -->
    <LinearLayout
        android:id="@+id/systemMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSystemMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System message here"
            android:textColor="@color/muted_foreground"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/bg_modern_card"
            android:padding="12dp"
            android:gravity="center"
            android:maxLines="3"
            android:alpha="0.8"/>

    </LinearLayout>

</LinearLayout>


