<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/card"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/looplab_blue"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ranking Badge -->
        <LinearLayout
            android:id="@+id/rankingBadge"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_ranking_badge"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tvRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="#1" />

        </LinearLayout>

        <!-- User Info Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/foreground"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="User Name"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvAchievements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/muted_foreground"
                android:textSize="12sp"
                android:text="3 courses • 5 events • 12 lectures"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Points Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/looplab_blue"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="1,250" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/muted_foreground"
                android:textSize="12sp"
                android:text="POINTS" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


