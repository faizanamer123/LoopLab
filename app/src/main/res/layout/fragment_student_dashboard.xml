<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Dashboard"
            app:titleTextColor="#000000"
            android:layout_marginHorizontal="4dp"
            app:background="@android:color/transparent" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Welcome Section with Gradient Background -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#D6A1FF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvWelcomeMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome back, Student!"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Continue your learning journey with LoopLab"
                        android:textColor="#5A2E7E"
                        android:textSize="16sp"
                        android:alpha="0.9"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="3"
                        android:ellipsize="end" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Overview Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Progress"
                android:textColor="#000000"
                android:textSize="22sp"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Enrolled Courses Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEnrolledCourses"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_courses"
                            app:tint="#80000000"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvEnrolledCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="08"
                            android:textColor="#000000"
                            android:textSize="80sp"
                            android:fontFamily="@font/manrope_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enrolled"
                            android:textColor="#80000000"
                            android:fontFamily="@font/manrope_medium"
                            android:textSize="14sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Completed Courses Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCompletedCourses"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_badge"
                            app:tint="#80000000"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvCompletedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="05"
                            android:textColor="#000000"
                            android:textSize="80sp"
                            android:fontFamily="@font/manrope_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:textColor="#80000000"
                            android:fontFamily="@font/manrope_medium"
                            android:textSize="14sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Points Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPoints"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_analytics"
                            app:tint="#80000000"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="12k"
                            android:textColor="#000000"
                            android:textSize="80sp"
                            android:fontFamily="@font/manrope_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Points"
                            android:textColor="#80000000"
                            android:fontFamily="@font/manrope_medium"
                            android:textSize="14sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Badges Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBadges"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_badge"
                            app:tint="#80000000"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvBadgeCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="03"
                            android:textColor="#000000"
                            android:textSize="80sp"
                            android:fontFamily="@font/manrope_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Badges"
                            android:textColor="#80000000"
                            android:fontFamily="@font/manrope_medium"
                            android:textSize="14sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Quick Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textColor="#000000"
                android:textSize="22sp"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBrowseCourses"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:text="Browse Courses"
                    android:textColor="#000000"
                    android:fontFamily="@font/manrope_semibold"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="20dp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_courses"
                    app:iconTint="#6E94C9"
                    app:iconPadding="16dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#A0C3F9" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewEvents"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:text="View Events"
                    android:textColor="#000000"
                    android:fontFamily="@font/manrope_semibold"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="20dp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_events"
                    app:iconTint="#6E94C9"
                    app:iconPadding="16dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#A0C3F9" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLeaderboard"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:text="View Leaderboard"
                    android:textColor="#000000"
                    android:fontFamily="@font/manrope_semibold"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="20dp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_analytics"
                    app:iconTint="#6E94C9"
                    app:iconPadding="16dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#A0C3F9" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChat"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:text="Open Chat"
                    android:textColor="#000000"
                    android:fontFamily="@font/manrope_semibold"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="20dp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_chat"
                    app:iconTint="#6E94C9"
                    app:iconPadding="16dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#A0C3F9" />

            </LinearLayout>

            <!-- Recent Activity Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Activity"
                android:textColor="#000000"
                android:textSize="22sp"
                android:fontFamily="@font/manrope_bold"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvRecentActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No recent activity"
                        android:textColor="#80000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope_medium"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_time"
                        android:drawablePadding="12dp"
                        app:drawableTint="#80000000" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>