<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoopLab" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <!-- Splash Screen Theme (AppCompat descendant to avoid crash) -->
    <style name="Theme.LoopLab.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Optional splash attributes on Android 12+ -->
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- Fallback window background for older versions -->
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <!-- Action Bar Style -->
    <style name="Theme.LoopLab.ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/primary</item>
        <item name="titleTextColor">@color/on_primary</item>
    </style>

    <!-- Button Styles -->
    <style name="Theme.LoopLab.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="Theme.LoopLab.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Card Style -->
    <style name="Theme.LoopLab.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- Text Styles -->
    <style name="Theme.LoopLab.TextAppearance.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.LoopLab.TextAppearance.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.LoopLab.TextAppearance.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.LoopLab.TextAppearance.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Theme.LoopLab.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/on_primary</item>
        <item name="subtitleTextColor">@color/on_primary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Theme.LoopLab.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/surface</item>
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
    </style>

    <!-- FAB Style -->
    <style name="Theme.LoopLab.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/secondary</item>
        <item name="tint">@color/on_secondary</item>
    </style>
</resources>