<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.LoopLab" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">@color/navigation_bar</item>

        <!-- Keep this override only if you want light icons on status bar -->
        <item name="android:windowLightStatusBar" tools:override="true">true</item>

        <!-- Keep this override only if you want light icons on nav bar -->
        <item name="android:windowLightNavigationBar" tools:override="true">true</item>

        <!-- Prevent auto dark theme inversion -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Bind to adaptive color tokens -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/primary_foreground</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/secondary_foreground</item>
        <item name="colorError">@color/destructive</item>
        <item name="colorOnError">@color/destructive_foreground</item>
        <item name="android:colorBackground">@color/background</item>
    </style>
</resources>